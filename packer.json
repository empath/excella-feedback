{
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "*ubuntu-xenial-16.04-amd64-server-*",
      "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "Excella Feedback {{isotime | clean_ami_name}}"
  }],
  "provisioners": [
    {
  "type": "shell",
  "inline": [
    "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
  ]
}, {
  "type": "shell",
  "inline": [
    "sudo apt-get update",
    "sudo apt-get install -y git zlib1g-dev libpq-dev libssl-dev libreadline-dev libyaml-dev libxml2-dev libxslt-dev build-essential ruby-dev libgmp3-dev libgmp-dev",
    "sudo apt-get install -y python python-pip",
    "pip install awscli",
    "git clone -b development https://github.com/empath/excella-feedback.git",
    "sudo gem install bundler",
    "cd excella-feedback",
    "bundle install"
  ]
}],
  "post-processors": ["compress"]
}
